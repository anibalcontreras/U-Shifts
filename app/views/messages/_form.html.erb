<%= form_with(model: @message, local: true) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.number_field :chat_id, class: "form-control", :value => @chat.id,  placeholder: "Id del chat", type: :hidden %>
  </div>

  <div class="mb-3">
    <%= form.number_field :sender_id, class: "form-control", :value => @user.id,  placeholder: "ID de quien manda el mensaje", type: :hidden %>
  </div>

  <div class="fi">
    <%= form.text_area :contenido %>
  </div>






  <div class="actions">
    <%= form.submit("Enviar Mensaje") %>
  </div>

<% end %>